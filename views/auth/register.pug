extends ../layout/index

block contenido
  .py-10
    h1.text-4xl.my-10.font-extrabold.text-center Bienes 
      span.font-normal Raices
    h2.text-center.text-2xl.font-extrabold=page

    if errors
      div(class="max-w-md mx-auto my-10")
        each error in errors
          p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

    .mt-8.mx-auto.max-w-md
      .bg-white.py-8.px-4.shadow.rounded-md
        form.space-y-5(method="POST", action="/auth/register" noValidate)
          input(type="hidden" name="_csrf" value= csrfToken)
          div 
            label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="name") Nombre
            input#name.w-full.px-3.py-1.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu nombre" type="text" name="name" value= user ? user.name : "")
          div 
            label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="email") Email
            input#email.w-full.px-3.py-1.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu email" type="email" name="email" value= user ? user.email : "")
          div 
            label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="password") Password
            input#password.w-full.px-3.py-1.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu password" type="password" name="password")
          div 
            label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="password_repeat") Repetir Password
            input#password_repeat.w-full.px-3.py-1.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Repite tu password" type="password" name="password_repeat")

          div.flex.items-center.justify-between
            a.text-gray-500.text-xs(href="/auth/login") ¿Ya tienes cuenta? Inicia Sesión 
            a.text-gray-500.text-xs(href="/auth/recover-password") Olvide mi password 

          input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold rounded-md py-3 cursor-pointer" type="submit" value="Crear cuenta")